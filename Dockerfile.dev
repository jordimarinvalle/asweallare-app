FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json ./
COPY package-lock.json* yarn.lock* ./

# Install dependencies (try yarn first, fallback to npm)
RUN if [ -f yarn.lock ]; then yarn install; \
    elif [ -f package-lock.json ]; then npm install; \
    else npm install; fi

# Copy source
COPY . .

# Remove any pre-built .next folder to ensure dev mode
RUN rm -rf .next

# Expose port
EXPOSE 3000

# Set environment explicitly
ENV NODE_ENV=development

# Start in development mode
CMD ["npm", "run", "dev"]
